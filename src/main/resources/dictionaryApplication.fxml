<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<GridPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="yahav.scrabble.DictionaryController"
            prefHeight="400.0" prefWidth="600.0" hgap="10" vgap ="4">
    <padding><Insets top="25" right="25" bottom="10" left="25"/></padding>

    <Label text="Word:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>

    <TextField fx:id="wordSearchField"  GridPane.columnIndex="1" GridPane.rowIndex="0"/>

    <Button text="Check Word" onAction="#dictionarySearch" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <TextField fx:id="ifFoundWordField" GridPane.columnIndex="1" GridPane.rowIndex="8"/>

</GridPane>
